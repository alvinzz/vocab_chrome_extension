{
  "manifest_version": 2,

  "name": "Vocab-Builder",
  "description": "Helps to improve your vocabulary, despite you being on the Internet.",
  "version": "1.0",

  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["replace.js", "jquery-3.1.1.js"]
    }
  ],

  "background":
    {
        "scripts": ["jquery-3.1.1.js"]
    },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ]
}
